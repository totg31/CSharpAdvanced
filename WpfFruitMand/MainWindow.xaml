<Window x:Class="WpfFruitMand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFruitMand"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <ListBox Width="200" Height="200" Name="LstFruitmand"></ListBox>
                <StackPanel>
                    <Button x:Name="BtnCitroen" Content="Citroen" Width="100" Margin="10"></Button>
                    <Button x:Name="BtnAppel" Content="Appel" Width="100" Margin="10"></Button>
                    <WrapPanel>
                        <Label Content="Naam" Margin="5"></Label>
                        <TextBox x:Name="TxtNaam" Width="100" Margin="5"></TextBox>
                        <Label Content="Gewicht" Margin="5"></Label>
                        <TextBox x:Name="TxtGewicht" Width="100" Margin="5"></TextBox>
                        <Button x:Name="BtnFruit" Content="Fruit" Width="100" Margin="10"></Button>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
